stars = int(input("enter no of stars:"))
blocks = int(input("enter no of blocks:"))
lines = int(input("enter no of lines:"))
for i in range(blocks):
    c=0
    for j in range(lines-i):
        for k in range(stars):
            print("*", end=" ")
            c=c+1
        print(c)
    print("-------------")
